<div class="row">
  <div class="col-md-12 landing-container">
		<h1 class="pull-left">Landing Pages</h1>

		<div class="pull-right actions">
      <br>
			<%= link_to 'New Page', new_landing_page_path, class: 'btn btn-primary' if can_manage_landings? %>
		</div>
		<div class="clearfix"></div>

		<% if @landings.empty? %>
		  <div class="alert alert-info">There are no landing pages yet, check back soon!</div>
		<% else %>
		  <% @landings.each do |page| %>
				<div class="landing_item">
		    	<h2><%= link_to page.title, page %></h2>

					<% if can_manage_landings? %>
						<%= content_tag(:small, link_to('Edit', edit_landing_page_path(page))) %><br/>
					<% end %>

				  <% unless page.published? %>
						<p class="muted posted-on">
				    	<em>Draft</em>
						</p>
				  <% end %>
				</div>
		  <% end %>
		<% end %>
  </div>
</div>
